@article{monaco_zhang_2019,
  title = {Spatial Synchronization Codes from Coupled Rate-Phase Neurons},
  author = {Monaco, Joseph D. and De Guzman, Rose M. and Blair, Hugh T. and Zhang, Kechen},
  editor = {Bush, Daniel},
  year = {2019},
